mixin footer-block(type)
	.col-sm-6.col-md-4.col-md-offset-0
		.footer-logo
			img(src='/images/'+type+'.png' alt=t('footer:'+type))
		.footer-text(class=type === 'social' ? 'social-network' : '')
				p.footer-caption=t('footer:'+type)
				block
footer
	.row
		+footer-block('contact')
			ul
				li
					span=t('footer:local') + ': '
					a(href="tel:+4384966886")
						| 438 496-6886
				li
					span=t('footer:email') + ':'
					a(href="mailto:info@infocinc.com")
						| info@infocinc.com
		+footer-block('office')
			ul
				li
					span=t('footer:address')
				li
					span=t('footer:city')
		+footer-block('social')
			-var social = ['Facebook','LinkedIn']
			-var href = ['//facebook.com/Infocinc','//linkedin.com/company/infocinc']
			-var i = 0
			ul
				while i < 2
					li
							a(target="_blank",href=href[i])=social[i]
					-i++
			ul
				while i < 3
					li
							a(target="_blank",href=href[i])=social[i]
					-i++
	.row.terms
		img(src="/images/logo.png", alt="Infocinc Logo")
		span
			|&copy; 
			=t('footer:copyrights')
		.footprints
			p=t('footer:cookies')
					a(href='/' + lang + '/terms' )
						=t('footer:learn-more')
			p=t('footer:keystone-powered')
					a(href="//keystonejs.com")
							| KeystoneJS
